# Market Data module environment variables
# Copy to market_data/.env (local, do not commit)

# Zerodha API credentials
KITE_API_KEY=your_kite_api_key_here
KITE_API_SECRET=your_kite_api_secret_here

# Redis (used by market_data collectors and store)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# MongoDB (optional storage for market/metadata)
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DB_NAME=zerodha_trading

# Instrument defaults
INSTRUMENT_SYMBOL=NIFTY BANK
INSTRUMENT_NAME=Bank Nifty
DATA_SOURCE=ZERODHA

# Historical replay settings
HISTORICAL_SOURCE=zerodha
HISTORICAL_SPEED=1.0
HISTORICAL_TICKS=0
